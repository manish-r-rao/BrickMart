<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/custom_screen"
    tools:context=".Sell">

    <Button
        android:id="@+id/cement"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="55dp"
        android:layout_marginTop="42dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="23dp"
        android:background="@drawable/custom_sell"
        android:fontFamily="@font/alegreya_sc"
        android:text="CEMENT"
        android:textColor="@color/material_dynamic_neutral90"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/bricks"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/bricks"
        android:layout_width="0dp"
        android:layout_height="0dp"

        android:layout_marginStart="55dp"
        android:layout_marginEnd="55dp"
        android:layout_marginBottom="33dp"
        android:background="@drawable/custom_sell"
        android:fontFamily="@font/alegreya_sc"
        android:text="BRICKS"
        android:textColor="@color/material_dynamic_neutral90"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/paint"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cement" />

    <Button
        android:id="@+id/paint"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="55dp"

        android:layout_marginEnd="55dp"
        android:layout_marginBottom="33dp"
        android:background="@drawable/custom_sell"
        android:fontFamily="@font/alegreya_sc"
        android:text="PAINT"
        android:textColor="@color/material_dynamic_neutral90"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bricks" />
</androidx.constraintlayout.widget.ConstraintLayout>